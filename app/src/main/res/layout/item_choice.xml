<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|start"
    android:orientation="horizontal"
    android:paddingStart="@dimen/item_list_side_padding"
    android:paddingEnd="@dimen/item_list_side_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_choice"
        android:layout_alignBottom="@+id/txt_name_choice"
        android:layout_alignTop="@+id/txt_name_choice"
        android:src="@mipmap/ic_help"
        android:contentDescription="Help Icon" />

    <TextView
        android:id="@+id/txt_name_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/choice_btn_margin"
        android:layout_toEndOf="@+id/icon_choice"
        android:gravity="start"
        android:textAlignment="gravity"
        style="@style/QText"
        android:text="@string/not_available"
        android:textStyle="bold"
        android:textSize="@dimen/text_large"/>


</RelativeLayout>